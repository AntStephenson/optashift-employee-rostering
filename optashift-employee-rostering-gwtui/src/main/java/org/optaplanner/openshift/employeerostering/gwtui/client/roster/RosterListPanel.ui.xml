<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

  <b:Container fluid="true">
    <b:Row>
      <b:Column size="XS_12">
        <b:ListBox ui:field='listBox' visibleItemCount='8'/>
      </b:Column>
    </b:Row>
    <b:Row>
      <b:Column size="XS_12">
        <b.gwt:CellTable bordered="true" condensed="true" striped="true" hover="true" height="300px"
                        width="100%" ui:field="rosterTable"/>
        <b:Pagination ui:field="rosterPagination"/>
      </b:Column>
    </b:Row>
  </b:Container>

</ui:UiBinder>
